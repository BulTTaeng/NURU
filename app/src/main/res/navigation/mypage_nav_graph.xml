<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mypage_nav_graph"
    app:startDestination="@id/myPageFragment">
    <!-- 이거 왜 startDestination 뺴고 다 디짐?-->

    <keep_state_fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.nuru.Fragment.MyPageFragment"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page" >
        <action
            android:id="@+id/action_myPageFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_myPageFragment_to_newMyFarmFragment"
            app:destination="@id/newMyFarmFragment" />
    </keep_state_fragment >
    <keep_state_fragment
        android:id="@+id/settingFragment"
        android:name="com.example.nuru.Fragment.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_myPageFragment"
            app:destination="@id/myPageFragment" />
    </keep_state_fragment >
    <keep_state_fragment
        android:id="@+id/newMyFarmFragment"
        android:name="com.example.nuru.Fragment.NewMyFarmFragment"
        android:label="fragment_new_my_farm"
        tools:layout="@layout/fragment_new_my_farm" >
        <argument
            android:name="farm"
            app:argType="com.example.nuru.model.Farm"
            app:nullable="true" />
        <action
            android:id="@+id/action_newMyFarmFragment_to_myPageFragment"
            app:destination="@id/myPageFragment" />
    </keep_state_fragment >
    <keep_state_fragment
        android:id="@+id/mapFragment"
        android:name="com.example.nuru.Fragment.MapFragment"
        android:label="MapFragment">
    </keep_state_fragment>
    <keep_state_fragment
        android:id="@+id/communityFragment"
        android:name="com.example.nuru.Fragment.CommunityFragment"
        android:label="CommunityFragment" >
    </keep_state_fragment>
    <keep_state_fragment
        android:id="@+id/alarmFragment"
        android:name="com.example.nuru.Fragment.AlarmFragment"
        android:label="fragment_alarm"
        tools:layout="@layout/fragment_alarm" />
</navigation>