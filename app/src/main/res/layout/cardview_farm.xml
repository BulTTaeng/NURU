<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:background="@drawable/background_roundedge"
    app:cardElevation="6dp">


    <TextView
        android:id="@+id/txt_FarmProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:maxLines="4"
        android:text="Item"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_FarmLocation"
        app:layout_constraintEnd_toStartOf="@+id/btn_DeleteFarmm"
        app:layout_constraintStart_toEndOf="@+id/img_NumEmoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_FarmLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:maxLines="4"
        android:text="Item"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_DeleteFarmm"
        app:layout_constraintStart_toEndOf="@+id/img_NumEmoji"
        app:layout_constraintTop_toBottomOf="@id/txt_FarmProducts" />


    <ImageButton
        android:id="@+id/btn_DeleteFarmm"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:maxWidth="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cancelbtn" />

    <ImageView
        android:id="@+id/img_NumEmoji"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>